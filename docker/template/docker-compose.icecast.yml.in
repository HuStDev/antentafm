version: "3.7"

volumes:
  icecast_log: { driver: local }
  icecast_cfg: { driver: local }
  icecast_etc: { driver: local }

services:
  icecast:
    image: moul/icecast
    restart: ${DOCKER_RESTART_POLICY}
    networks:
      - "antentafm"
    labels:
      traefik.enable: "${TRAEFIK_ENABLED}"
       _TRAEFIK_ENABLED_traefik.tcp.routers.icecast-tcp.rule: HostSNI(`*`)
       _TRAEFIK_ENABLED_traefik.tcp.routers.icecast-tcp.entrypoints: web
       _TRAEFIK_ENABLED_traefik.tcp.routers.icecast-tcp.tls: false
       _TRAEFIK_ENABLED_traefik.tcp.routers.icecast-tcp.service: icecast-tcp
       _TRAEFIK_ENABLED_traefik.tcp.services.icecast-tcp.loadbalancer.server.port: 8000
       _TRAEFIK_ENABLED_traefik.http.routers.icecast-insecure.rule: "Host(`stream.${DOMAIN}`)"
       _TRAEFIK_ENABLED_traefik.http.routers.icecast-insecure.entrypoints: web
       _TRAEFIK_ENABLED_traefik.http.routers.icecast-insecure.middlewares: redirect-secure
       _TRAEFIK_ENABLED_traefik.http.routers.icecast.rule: "Host(`stream.${DOMAIN}`)"
       _TRAEFIK_ENABLED_traefik.http.routers.icecast.entrypoints: websecure
       _TRAEFIK_ENABLED_traefik.http.routers.icecast.tls.certresolver: "letsencrypt"
       _TRAEFIK_ENABLED_traefik.http.routers.icecast.service: icecast
       _TRAEFIK_ENABLED_traefik.http.services.icecast.loadbalancer.server.port: 8000
    expose:
      - 8000
    ports:
      - "8000:8000"
    volumes:
      - "${ICECAST_CONFIG_FILE}:/etc/icecast2/icecast.xml"
      - icecast_etc:/etc/icecast2
      - icecast_cfg:/config
      - icecast_log:/var/log/icecast2
      - /etc/localtime:/etc/localtime:ro

networks:
  antentafm:
