version: "3.7"

volumes:
  node_recordings: { driver: local }

services:
  nodeserver:
    image: hust/node:1.0.0
    restart: ${DOCKER_RESTART_POLICY}
    networks:
      - "antentafm"
    labels:
      traefik.enable: "${TRAEFIK_ENABLED}"
      traefik.http.routers.node_route.rule: "Host(`radio.${DOMAIN}`)" # Set domain
      traefik.http.routers.node_route.entrypoints: "web,websecure" # Assign Trafike service
      traefik.http.routers.node_route.tls: "_TLS_CHALLENGE_"
      traefik.http.routers.node_route.tls.certresolver: "letsencrypt"
      traefik.http.routers.node_route.tls.domains[0].main: "radio.${DOMAIN}"
      traefik.http.routers.node_route.tls.domains[0].sans: "radio.${DOMAIN}"
      traefik.http.routers.node_route.service: "node_service" # Assign Trafike service
      traefik.http.services.node_service.loadbalancer.server.port: "7000" # Port of container used
    environment:
      - NPM_SKIP_START=${NPM_SKIP_START:-}
    expose:
      - 7000
      - 9229
    ports:
      - "7000:7000"
      - "9229:9229"
    volumes:
      - "${NODE_APP_HOST_DIR}:/usr/app/website"
      - node_recordings:/usr/app/website/recordings

networks:
  antentafm:
